# Production MCP System Configuration
# This configuration uses the production NVMe drive for optimal performance

# Production Drive Paths
PROD_ROOT="/mnt/environments/prod/mcp-system"
PROD_LOGS="${PROD_ROOT}/logs"
PROD_VOLUMES="${PROD_ROOT}/volumes"
PROD_DATA="${PROD_ROOT}/data"
PROD_REPOS="${PROD_ROOT}/repos"
PROD_CONFIG="${PROD_ROOT}/config"
PROD_IMAGES="${PROD_ROOT}/images"

# Container Management
CONTAINER_MANAGER="podman"
NETWORK_NAME="mcp-prod-network"
ROUTER_PORT="8080"
MONITOR_PORT="3001"

# Resource Management
MAX_MEMORY_PER_CONTAINER="512M"
MAX_CPU_PER_CONTAINER="1.0"
AUTO_SHUTDOWN_TIMEOUT="300"  # 5 minutes of inactivity
HEALTH_CHECK_INTERVAL="30"

# Stdio Communication
STDIO_ENABLED="true"
STDIO_BUFFER_SIZE="8192"
STDIO_TIMEOUT="30"

# Logging
LOG_LEVEL="info"
LOG_RETENTION_DAYS="30"
LOG_MAX_SIZE="100M"

# Security
NON_ROOT_USER="true"
READ_ONLY_MOUNTS="true"
NETWORK_ISOLATION="true"

# Performance
ENABLE_CACHE="true"
CACHE_SIZE="2G"
ENABLE_COMPRESSION="true" 